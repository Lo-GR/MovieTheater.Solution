@{
  Layout = "_Layout";
}

@model MovieTheater.Models.Customer

<h2>Edit Details for @Model.CustomerName </h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(customer => customer.CustomerId);
  @Html.LabelFor(customer => customer.CustomerName)
  @Html.TextBoxFor(customer => customer.CustomerName);
  @Html.LabelFor(customer => customer.TicketNumber)
  @Html.TextBoxFor(customer => customer.TicketNumber)

  <button class="btn btn-success" type="submit">Edit Details</button>
}

<button class="btn btn-dark">@Html.ActionLink("Back To Customer List", "Index")</button>