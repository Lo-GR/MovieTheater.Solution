@{
  Layout ="_Layout";
}

@using MovieTheater.Models;
@model List<MovieTheater.Models.Customer>;

<h1>List of Customers</h1>

@if (@Model.Count == 0)
{
  <h3>No Customers have seen any current movies</h3>
}

@foreach (Customer element in Model)
{
  <li>@Html.ActionLink($"{element.CustomerName}", "Details", new {id = element.CustomerId}) </li>
}

<button class="btn btn-dark">@Html.ActionLink("Create Customer", "Create")</button>